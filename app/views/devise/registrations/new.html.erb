<div class="col-lg-8 col-lg-offset-2 bsa well" style="margin-top:3%;">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
    <%= devise_error_messages! %>
    <legend>Register</legend>
    <div class="form-group">
        <%= f.label :email, class: "control-label col-lg-2" %>
        <div class="col-lg-8">
            <%= f.email_field :email, :autofocus => true, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :newTeam,"Create New Team?", class: "control-label col-lg-2" %>
        <div class="col-lg-8">
            <%= f.check_box :newTeam, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :teamName, class: "control-label col-lg-2" %>
        <div class="col-lg-8">
            <%= f.text_field :teamName, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :organization, "Institute/Organization", class: "control-label col-lg-2" %>
        <div class="col-lg-8">
            <%= f.text_field :organization, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :password, class: "control-label col-lg-2" %>
        <div class="col-lg-8">
            <%= f.password_field :password, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :password_confirmation , class: "control-label col-lg-2"%>
        <div class="col-lg-8">
            <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
    </div> <br /> <br />
    <div class='col-lg-10'>
        <%= f.submit "Sign up", class: "btn btn-primary col-lg-2  col-lg-offset-12" %>
    </div>
</div>
<% end %>

